<?xml version="1.0"?>
<config>
    <sections>
        <dev>
            <groups>
                <mageploy translate="label">
                    <label>Mageploy</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label,comment">
                            <label>Active</label>
                            <comment><![CDATA[Choose whether to track actions performed in Admin Control Panel]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </active>
                        <debug translate="label,comment">
                            <label>Debug mode</label>
                            <comment><![CDATA[Force this module to write log files.]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </debug>
                        <user translate="label,comment">
                            <label>Specific User Identifier</label>
                            <comment><![CDATA[This value can be used to identify which user performed each action.]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </user>
                        <storage translate="label,comment">
                            <label>Storage directory</label>
                            <comment><![CDATA[The path where Mageploy will create csv files. Paths starting without a slash '/' are considered relative to Magento root path.]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </storage>
                        <use_db translate="label,comment">
                              <label>Use db for executed actions</label>
                              <comment><![CDATA[WARNING: use just a mode, choose one to begin of project]]></comment>
                              <frontend_type>select</frontend_type>
                              <source_model>adminhtml/system_config_source_yesno</source_model>
                              <sort_order>50</sort_order>
                              <show_in_default>1</show_in_default>
                              <show_in_website>0</show_in_website>
                              <show_in_store>0</show_in_store>
                          </use_db>
                    </fields>
                </mageploy>
            </groups>
        </dev>
    </sections>
</config>